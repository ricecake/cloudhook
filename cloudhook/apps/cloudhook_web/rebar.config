	{jsx,     {git, "https://github.com/talentdeficit/jsx.git", {branch, "master"}}},
	{erlydtl, {git, "https://github.com/erlydtl/erlydtl.git",   {branch, "master"}}},
	{cowboy,  {git, "https://github.com/ninenines/cowboy.git",  {ref, "dbb636034"}}},
